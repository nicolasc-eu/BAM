{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [ "es2015", "dom" ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es5",
        "types": [
            "node"
        ]
    },
    "exclude": [
        "node_modules/*"
    ],
    "atom": {
        "formatOnSave": true
    },
    "compileOnSave": false
}
